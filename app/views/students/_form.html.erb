<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="text-center">
    <h1 class="display-5 mb-4">Create Student Profile</h1>

    <div class="card p-4 shadow" style="width: 100%; max-width: 500px;">

      <%= form_with model: student, local: true do |f| %>
        <% if student.errors.any? %>
          <div class="alert alert-danger">
            <h5><%= pluralize(student.errors.count, "error") %> prohibited this profile from being saved:</h5>
            <ul class="mb-0">
              <% student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3 text-start">
          <%= f.label :firstname, class: "form-label" %>
          <%= f.text_field :firstname, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :lastname, class: "form-label" %>
          <%= f.text_field :lastname, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :yearstanding, class: "form-label" %>
          <%= f.select :yearstanding, options_for_select(["Freshman", "Sophomore", "Junior", "Senior"], student.yearstanding), {}, class: "form-select" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :major, class: "form-label" %>
          <%= f.text_field :major, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :minor, class: "form-label" %>
          <%= f.text_field :minor, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :degree, class: "form-label" %>
          <%= f.text_field :degree, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>



        <div class="d-grid">
          <%= f.submit "Save Profile", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
