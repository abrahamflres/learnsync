<%= form_with model: student, local: true do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>

  <div>
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>

  <div>
    <%= f.label :yearstanding %><br>
    <%= f.select :yearstanding, options_for_select(["Freshman", "Sophomore", "Junior", "Senior"], student.yearstanding) %>
  </div>

  <div>
    <%= f.label :major %><br>
    <%= f.text_field :major %>
  </div>

  <div>
    <%= f.label :minor %><br>
    <%= f.text_field :minor %>
  </div>

  <div>
    <%= f.label :degree %><br>
    <%= f.text_field :degree %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
